<% time = @deposits.created_at %>

<% conta = @fund_source.uid.split("/") %>
<% bank = @fund_source.label %>

<p style="color:#078ABA; font-size:15px; margin-top:-25px;">
  <%= t('mailer.client_uuid') %> <%= @client_uuid %>
</p>

<p style="color:#078ABA; font-size:30px;">
  <%= t('.available') %>
</p>

<p style="color:#5F5F5F; font-weight: 500">
  <%= t('.accepted', id:  @deposit.txid_text) %>
</p>

<p style="color:#078aba;font-size:20px; font-weight: 500">
<%= t('.amount', {symbol: Currency.find_by_code(@deposits.currency).symbol, amount:  @deposits.amount}) %><br/>) %>
</p>

<% unless @deposits.currency_text == 'BRL' %>
  <p style="color:#9A9A9A; font-weight: 500" >Carteira de destino: <%= @deposits.fund_uid %></p>
<% end %>

<% unless @deposits.currency_text != 'BRL' %>
  <p style="color:#9A9A9A; font-weight: 500">
    Banco: <%= bank %><br/>
    Agencia: <%= conta[1] %><br/>
    Conta: <%= conta[2] %><br/>
  </p>
<% end %>


<p style="color:#5F5F5F; font-weight: 500">
  Data: <%= time.strftime("%d/%m/%Y") %><br/>
  Hora: <%= time.strftime("%H:%M") %>
</p>
<br/>